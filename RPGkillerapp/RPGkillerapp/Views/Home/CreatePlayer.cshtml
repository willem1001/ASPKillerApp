
@using RPGkillerapp.Models
@model  ClassLibrary.NewPlayer
@{
    ViewBag.Title = "Home_Page";
}

<div class="jumbotron">
    <h1>RPG</h1>
</div>

<div class="input-group"></div>

@using (Html.BeginForm("NewPlayer", "Home", FormMethod.Post))
{
    <form>
        <div>
            @Html.Label("Name") <br />
            @Html.TextBoxFor(model => Model.Name) <br />
            @Html.Label("Class") <br />
            @Html.DropDownListFor(model => Model.Classes, ClassSelect.ClassesDropdown)<br /> <br />

            <input type="submit" value="submit"/>
        </div>
    </form>
}
